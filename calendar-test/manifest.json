{
    "manifest_version": 2,
    "name": "Calendar Logger",
    "version": "1.0",
    "description": "Logs available Thunderbird calendars.",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [],
    "experiment_apis": {
        "calendar": {
            "schema": "schema/calendar.json",
            "parent": {
                "scopes": [
                    "addon_parent"
                ],
                "script": "api/calendar.js",
                "paths": [
                    [
                        "calendar",
                        "listCalendars"
                    ],
                    [
                        "calendar",
                        "createEvent"
                    ]
                ]
            }
        }
    },
    "applications": {
        "gecko": {
            "id": "calendar-logger@example.com",
            "strict_min_version": "115.0"
        }
    }
}